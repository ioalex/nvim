{
  "suggest.noselect": false,
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "json",
    "javascriptreact",
    "typescript.tsx",
    "graphql",
    "css",
    "markdown",
    "html",
    "yaml",
    "python"
  ],
  /* Setting coc-prettier defaults
  - Prettier will rely on this if no prettier configuration file exists */
  "prettier.printWidth": 80,
  "prettier.tabWidth": 2,
  "prettier.singleQuote": false,
  "prettier.trailingComma": "none",
  "prettier.bracketSpacing": true,
  "prettier.jsxBracketSameLine": false,
  "prettier.parser": "babylon",
  "prettier.semi": true,
  "prettier.useTabs": false,
  "prettier.proseWrap": "preserve",
  "prettier.arrowParens": "avoid",
  "prettier.eslintIntegration": true,
  "prettier.stylelintIntegration": false,

  // ESLint Configuration
  "eslint.enable": true,
  "eslint.run": "onType",
  "eslint.packageManager": "npm",
  "eslint.autoFixOnSave": true,

  // Markdown Lint Configuration
  "markdownlint.onOpen": true,
  "markdownlint.onChange": true,
  "markdownlint.onSave": true,
  "markdownlint.config": {
    "default": true,
    "line_length": false
  },

  "emmet.includeLanguages": {
    // Enable Emmet for Nunjucks templating engine
    "jinja.html": "html"
  },
  // Turn off coc-css validation as coc-stylelintplus is preferred
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "wxss.validate": false,

  // coc-explorer Settings
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  }
}
